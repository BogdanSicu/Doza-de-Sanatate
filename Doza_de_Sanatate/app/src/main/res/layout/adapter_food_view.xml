<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:id="@+id/adapter_food_layout">

    <ImageView
        android:id="@+id/adapter_food_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icon_launcher"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/adapter_food_kcal"/>

    <TextView
        android:id="@+id/adapter_food_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Text"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="71dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/adapter_food_image"
        app:layout_constraintTop_toBottomOf="@id/adapter_food_kcal"
        android:layout_marginTop="20dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/adapter_food_kcal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Kcal / 100g - "
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="71dp"
        app:layout_constraintTop_toBottomOf="@id/adapter_food_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/adapter_food_image"
        app:layout_constraintBottom_toTopOf="@id/adapter_food_carb"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/adapter_food_carb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Carbohydrates / 100g - "
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="71dp"
        app:layout_constraintTop_toBottomOf="@id/adapter_food_kcal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/adapter_food_image"
        app:layout_constraintBottom_toTopOf="@id/adapter_food_protein"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/adapter_food_protein"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Proteins / 100g - "
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="71dp"
        app:layout_constraintTop_toBottomOf="@id/adapter_food_carb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/adapter_food_image"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"/>



</androidx.constraintlayout.widget.ConstraintLayout>