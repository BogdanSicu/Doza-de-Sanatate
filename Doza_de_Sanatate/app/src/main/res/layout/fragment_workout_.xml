<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Workout_Fragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/fragment_workout_menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/workout_list_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="165dp">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/fragment_workout_gym"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gym" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/fragment_workout_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home" />

    </com.google.android.material.tabs.TabLayout>

    <ListView
        android:id="@+id/workout_list_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_workout_menu"
        android:layout_marginTop="10dp"/>

